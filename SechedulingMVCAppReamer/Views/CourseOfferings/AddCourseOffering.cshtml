@model CourseOffering
@{
    ViewData["Title"] = "AddCourseOffering";
}

<h4>Add Course Offering</h4>
<form asp-action="AddCourseOffering" method="post">

    <div class="form-group">
        <label>CRN</label>
        <input asp-for="CRN" class="form control" />
    </div>

    <div class="form-group">
        <label>Days</label>
        <select asp-for="Days" asp-items="ViewBag.DaysOfWeekValues" class="form control"></select>
    </div>

    <div class="form-group">
        <label>StartTime</label>
        <input asp-for="StartTime" class="form control" />
    </div>

    <div class="form-group">
        <label>EndTime</label>
        <input asp-for="EndTime" class="form control" />
    </div>

    <div class="form-group">
        <label>StartDate</label>
        <input asp-for="StartDate" class="form control" />
    </div>

    <div class="form-group">
        <label>EndDate</label>
        <input asp-for="EndDate" class="form control" />
    </div>

    <div class="form-group">
        <label>InstructorID</label>
        <select asp-for="InstructorID" asp-items="ViewBag.Instructors" class="form control"></select>
    </div>

    <div class="form-group">
        <label>CourseID</label>
        <select asp-for="CourseID" asp-items="ViewBag.Courses" class="form control"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Add New Course Offering" class="btn btn-default" />
    </div>

</form>



