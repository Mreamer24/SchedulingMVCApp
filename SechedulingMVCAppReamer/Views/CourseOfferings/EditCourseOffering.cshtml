@model CourseOffering
@{
    ViewData["Title"] = "EditCourseOffering";
}

<h4>Edit Course Offering</h4>
<form asp-action="EditCourseOffering" method="post">

    <input type="hidden" asp-for="CourseOfferingID" />

    <input type="hidden" asp-for="CourseOfferingID" />

    <div class="form-group">
        <label> CRN</label>
        <Input asp-for="CRN" class="form-control" />
    </div>

    <div class="form-group">
        <label> Days</label>
        <select asp-for="Days" asp-items="ViewBag.DaysOfWeekValues" class="form-control"></select>
    </div>

    <div class="form-group">
        <label> Start Time</label>
        <Input asp-for="StartTime" class="form-control" />
    </div>
    <div class="form-group">
        <label> End Time</label>
        <Input asp-for="EndTime" class="form-control" />
    </div>

    <div class="form-group">
        <label> Start Date</label>
        <Input asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label> End Date</label>
        <Input asp-for="EndDate" class="form-control" />
    </div>

    <div class="form-group">
        <label> Instructor</label>
        <select asp-for="InstructorID" asp-items="ViewBag.Instructors" class="form-control"></select>
    </div>

    <div class="form-group">
        <label> Course</label>
        <select asp-for="CourseID" asp-items="ViewBag.Courses" class="form-control"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Update Course Offering" class="btn btn-default" />
    </div>

</form>

